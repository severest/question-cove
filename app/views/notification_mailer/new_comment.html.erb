<table border="0" cellpadding="0" cellspacing="0" width="100%" id="newCommentContent">
  <tr>
    <td align="center" valign="top">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin:0 0 20px 0;">
        <tr>
          <td align="center" valign="top" style="text-align:left;font-weight: bold;font-size: 18px;">
            <%= @question.first_line_for_slug.strip %>
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <tr>
    <td align="center" valign="top">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin:0 0 5px 0;">
        <tr>
          <td valign="middle" width="30px" style="text-align:left;font-size:14px;">
            <%= gravatar_tag @comment.user.email, :size => 25 %>
          </td>
          <td valign="middle" style="text-align:left;font-size:14px;">
            <%= @comment.user.name %> commented:
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <tr>
    <td align="center" valign="top">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin:0 0 15px 0;">
        <tr>
          <td align="center" valign="top" style="text-align:left;">
            <%= @comment.text %>
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <tr>
    <td align="center" valign="top">
      <table border="0" cellspacing="0" cellpadding="0" width="100%" height="34px">
        <tr>
          <td align="center" valign="middle">
            <a href="<%= question_url(@question) %>"
              style="background:#32435E;color:#fff;font-size:16px;padding:8px 12px;border-radius:4px;text-decoration:none;"
            >
              View the question
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
